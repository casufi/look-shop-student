div.carousel-promo
  div.nodisplay
    img(ng-repeat="image in $ctrl.images" ng-src="{{image.src}}")
  div.carousel-image(ng-if="$ctrl.images.length" ng-class="$ctrl.direct")
    div.local-wrapper(ng-swipe-left="$ctrl.setActiveNext()" ng-swipe-right="$ctrl.setActivePrevious()" ng-swipe-disable-mouse)
      a(ng-repeat="image in $ctrl.images" ng-href="{{image.url}}" ng-if="$ctrl.isActiveImg($index)")
        img(ng-src="{{image.src}}")
      div.carousel.left(ng-click="$ctrl.setActivePrevious()")
        i.icon.mdi.mdi-chevron-left
      div.carousel.right(ng-click="$ctrl.setActiveNext()")
        i.icon.mdi.mdi-chevron-right
      div.carousel-action
  div.local-wrapper
    nav.carousel-track
      a(ng-repeat="image in $ctrl.images" ng-click="$ctrl.setActiveIndex($index)")
        i.icon.mdi.mdi-record(ng-class="{active: $ctrl.isActiveImg($index)}")
