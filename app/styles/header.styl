large-screen = 1080px
middle-screen = 760px
small-screen = 640px
body-text-color = #555555
font-weight-normal = 400
font-weight-bold = 700

.user-toolbox
  height: 30px
  background-color: #000000
  color: #ffffff
  font-size: 0.786em
  letter-spacing: -0.005em
  text-transform: uppercase

.care-info
  padding-top: 8px
  padding-bottom: 8px


.shop-settings
  height: 100%
  display: flex
  margin-left: auto

  div
    text-align: center
    height: 100%
    padding-top: 9px
    border-width: 1px
    border-color: #444444
    border-style: solid

  .currency-select
    width: 70px

  .account-button
    width: 127px
    padding-top: 3px
    i.icon
      font-size: 1.6em
      color: #666666

  .search-button
    width: 35px
    padding-top: 5px
    i.icon
      font-size: 1.6em

.menu-box
  height: 105px
  img.shop-logo
    height: 28px
    width: auto

  .top-menu
    height: 28px
    display: flex
    margin-left: auto

    a.menu-item
      cursor pointer
      padding-left: 15px
      padding-right: 15px
      display: block
      font-size: 1.143em;
      color: #000000
      .icon
        margin-left: 5px

.cart-box
  width: 214px
  height: 66px
  color: #949393
  font-size: 0.857em
  letter-spacing: +0.055em

  .cart-button
    height: 33px
    border: 1px solid #d6d6d6
    display: flex
    padding-left: 10px
    padding-top: 9px
    padding-right: 10px
    i.icon
      display: block
      margin-left: auto

  .cart-totall
    height: 33px
    border-left: 1px solid #d6d6d6
    border-right: 1px solid #d6d6d6
    border-bottom: 1px solid #d6d6d6
    display: flex
    padding-left: 10px
    padding-top: 9px
    padding-right: 10px
    i.icon
      font-size: 1.6em
    span.total
      margin-left: auto
