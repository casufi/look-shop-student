.positions
  position relative
  left -12%
  display flex
  flex-flow row nowrap
  background transparent
  height 100%
  width 100%
  margin-right auto
  margin-left auto

.position
  flex-shrink 0
  position relative
  background-color white
  margin-top 25px
  margin-bottom 25px
  margin-left 15px
  margin-right 15px
  padding 0px
  width 240px
  img
    margin 0px
    width 100%
    height auto
  .position-label
    text-align center
    padding-top 15px
    background-color #ffffff
    position absolute
    bottom 0
    width: 100%
    height: 105px
    justify-content center
    .position-name
      text-transform uppercase
      color: #373737
      font-size: 0.857em
      letter-spacing: -0.01em
      width 100%
      height 50px

    .position-button
      width: 140px
      height: 32px
      background-color: #ff8d72
      margin-left auto
      margin-right auto
      position relative

      i.icon
      span
        display inline-block
        color #ffffff
        position relative
        top 50%
        transform: translateY(-0.6em)
        text-transform uppercase
  &:hover
    border-width 20px
    border-color black
