large-screen = 1080px
middle-screen = 815px
small-screen = 640px
body-text-color = #555555
font-weight-normal = 400
font-weight-bold = 700

.positions
  position: relative
  left: -12%
  display: flex
  flex-flow: row nowrap
  background: transparent
  height: 100%
  width: 150%
  margin-right: auto
  margin-left: auto

.position
  flex-shrink: 0
  position: relative
  background-color: white
  margin-top: 25px
  margin-bottom: 25px
  margin-left: 15px
  margin-right: 15px
  padding: 0px
  width: 240px
  transition: transform 0.3s
  &:hover
    transform: scale(1.05, 1.05);
    transition: transform 0s

  .position-sale-corner
    position: absolute
    top: 0px
    left: 0px
    width: 50px
    height: 50px
    background-color: #4c4c4c
    color: #fff
    font-size: 0.714em
    text-transform: uppercase
    padding: 4px
    &::before
      content: ''
      position: absolute
      top: 0px
      left: 0px
      width: 0px
      height: 0px
      border-left: 25px solid transparent
      border-top: 25px solid transparent
      border-right: 25px solid white
      border-bottom: 25px solid white


  img
    margin: 0px
    width: 100%
    height: auto
  .position-label
    text-align: center
    padding-top: 15px
    background-color: #f7f7f7
    position: absolute
    bottom: 0
    width: 100%
    height: 105px
    justify-content: center

    .position-name
      text-transform: uppercase
      color: #373737
      font-size: 0.857em
      letter-spacing: -0.01em
      width: 100%

    .position-button
      cursor: pointer
      width: 140px
      height: 32px
      background-color: #ff8d72
      margin-top: 10px
      margin-left: auto
      margin-right: auto
      position: relative
      &:hover
        border-width: 2px
        border-color: black

      i.icon
      span
        display: inline-block
        color: #ffffff
        position: relative
        top: 50%
        //Why 0.7 not 0.5
        transform: translateY(-0.7em)
        text-transform: uppercase
