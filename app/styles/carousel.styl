.carousel-promo
  background-color: #f6f3ec

.carousel-image
  width 100%
  background-color: #ededed
  position: relative
  text-align: center

.carousel-image
  .local-wrapper > img
    width: 100%
    height: auto
    margin: 0px
    &.ng-animate
      transition:300ms linear all
    &.active-add
      opacity:0
    &.active
      opacity:1
    &.active-remove
      opacity:0
    &:not(.active)
      display block
      position absolute
      top: 0
      left: 0
      opacity:0

.carousel
  position: absolute
  display: table-cell
  width: 30px
  height: 118px
  top: 50%
  transform: translateY(-59px)
  background-color: rgba(255, 255, 255, 0.9);
  padding-top: 50px
  text-align: center
  cursor: pointer
  &.left
    left: 0px
  &.right
    right: 0px

carousel-track-height = 75px
.carousel-track
  height: carousel-track-height
  display: flex
  justify-content: center
  a
    height: carousel-track-height
    display: block
    position: relative
    i.icon
      display: block
      height: carousel-track-height
      position: relative
      top: 50%
      transform: translateY(-0.5em)
      background-color: transparent
      width: 30px
      text-align: center
      &.active
        color: #fd926d
      &.icon
        cursor: pointer
