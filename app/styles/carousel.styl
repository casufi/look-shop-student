.carousel-promo
  background-color: #f6f3ec

.carousel-image
  width 100%
  background-color: #ededed
  position: relative
  text-align: center
  overflow: hidden

.carousel-image  .local-wrapper
    overflow: hidden

    &>img
      display block
      position relative
      width: 100%
      height: auto
      margin: 0px

      &.left.ng-enter
        position relative
        transform: translateX(100%)
        transition: transform 500ms linear

      &.left.ng-enter.ng-enter-active
        position relative
        transform: translateX(0)

      &.left.ng-leave
        position absolute
        top: 0
        left: 0
        opacity: 1
        transition:opacity 500ms linear

      &.left.ng-leave.ng-leave-active
        position absolute
        top: 0
        left: 0
        opacity: 0

      &.right.ng-enter
        position relative
        transform: translateX(-100%)
        transition: transform 500ms linear

      &.right.ng-enter.ng-enter-active
        position relative
        transform: translateX(0)

      &.right.ng-leave
        position absolute
        top: 0
        left: 0
        opacity: 1
        transition:opacity 500ms linear

      &.right.ng-leave.ng-leave-active
        position absolute
        top: 0
        left: 0
        opacity: 0

.carousel
  position: absolute
  display: table-cell
  width: 30px
  height: 118px
  top: 50%
  transform: translateY(-59px)
  background-color: rgba(255, 255, 255, 0.9);
  padding-top: 50px
  text-align: center
  cursor: pointer

  &.left
    left: 0px

  &.right
    right: 0px

carousel-track-height = 75px
.carousel-track
  height: carousel-track-height
  display: flex
  justify-content: center

  a
    height: carousel-track-height
    display: block
    position: relative

    i.icon
      display: block
      height: carousel-track-height
      position: relative
      top: 50%
      transform: translateY(-0.5em)
      background-color: transparent
      width: 30px
      text-align: center

      &.active
        color: #fd926d

      &.icon
        cursor: pointer
