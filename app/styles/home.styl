large-screen = 1080px
middle-screen = 760px
small-screen = 640px

.full-flex-container
  display: flex
  align-items: center
  padding-left: 10%
  padding-right: 10%
  @media screen and (max-width: large-screen)
    padding-left: 5%
    padding-right: 5%


.user-toolbox
  height: 30px
  background-color: #000000
  color: #ffffff
  font-size: 0.786em
  letter-spacing: -0.005em
  text-transform: uppercase

.care-info
  padding-top: 8px
  padding-bottom: 8px


.shop-settings
  height: 100%
  display: flex
  margin-left: auto

  section
    text-align: center
    height: 100%
    padding-top: 9px
    border-width: 1px
    border-color: #444444
    border-style: solid

  .currency-select
    width: 70px

  .account-button
    width: 127px
    padding-top: 3px
    i.icon
      font-size: 1.6em
      color: #666666

  .search-button
    width: 35px
    padding-top: 5px
    i.icon
      font-size: 1.6em

.menu-box
  height: 105px
  img.shop-logo
    height: 28px
    width: auto

  ul.top-menu
    height: 28px
    display: flex
    margin-left: auto
    list-style: none

    li
      cursor pointer
      padding-left: 15px
      padding-right: 15px
      display: block
      font-size: 1.143em;
      color: #000000
      .icon
        margin-left: 5px
    li:last-child
      padding-right: 20px

.cart-box
  width: 214px
  height: 66px
  color: #949393
  font-size: 0.857em
  letter-spacing: +0.055em

  .cart-button
    height: 33px
    border: 1px solid #d6d6d6
    display: flex
    padding-left: 10px
    padding-top: 9px
    padding-right: 10px
    i.icon
      display: block
      margin-left: auto

  .cart-totall
    height: 33px
    border-left: 1px solid #d6d6d6
    border-right: 1px solid #d6d6d6
    border-bottom: 1px solid #d6d6d6
    display: flex
    padding-left: 10px
    padding-top: 9px
    padding-right: 10px
    i.icon
      font-size: 1.6em
    span.total
      margin-left: auto

.slider-promo
  height: 515px

.slider-image
  background-color: #f6f3ec
  height: 440px
  position: relative
  text-align center

.slider
  position: absolute
  display table-cell
  width: 30px
  height: 117px
  top: 162px
  background-color: rgba(255, 255, 255, 0.9);
  padding-top: 50px
  text-align: center
  cursor pointer
  &.left
    left: 0px
  &.right
    right: 0px


.slider-track
  height: 75px
  display: flex
  justify-content: center
  section
    i
      display block
      position relative
      top 50%
      margin-top: -0.5em;
      background-color: transparent
      width: 30px
      text-align center
      &.selected
        color #fd926d
      &.icon
        cursor pointer

user-connections-height = 55px
.user-connections
  background-color: #ededed
  height: user-connections-height
  color: #6b6b6b
  h3
    font-size: 0.857em
    font-weight: 400;
    letter-spacing: -0.005em
    margin-right 15px

  .email-subscription
    display flex
    align-items: center
    input
      border 0px
      height: 28px
      color: #9f9f9f
      font-size: 0.857em
      font-style: italic
      letter-spacing: -0.005em
      text-align: left
      padding-left 10px

    input:focus
        color black
        font-style: normal
    img.email-do
        position relative
        right 2px
        height 26px
        width auto

  .social-buttons
    height user-connections-height
    margin 0px
    padding 0px
    border-width 0px
    display flex
    margin-left: auto
    align-items: center

    section
      text-align: center
      height user-connections-height
      width user-connections-height
      margin 0px
      padding 0px
      border-width 0px
      i.icon
        display block
        position relative
        top 50%
        margin-top: -0.5em
        font-size 27px
      &:nth-child(even)
        background-color #f7f7f7


.promo-boxes
  max-width: 970px
  height: 345px
  border: 1px solid red
  display: flex
  flex-flow column wrap
  margin-top: 40px
  margin-bottom: 40px
  margin-left auto
  margin-right auto
  align-content: center
  section
    padding 1px
    img
      height 100%
      width auto
  .promo-big
    width: 484px
    height: 340px

  .promo-long
    width: 484px
    height: 169px

  .promo-small
    width: 241px
    height: 169px

.hot-sales
  border: 1px solid red
  hot-menu-height = 45px
  .hot-menu
    height: hot-menu-height
    .hot-buttons
      height hot-menu-height
      margin 0px
      padding 0px
      border-width 0px
      display flex
      section
        display inline-block
        height 100%
        text-transform uppercase
        padding-left 15px
        padding-right 15px
        &.active
          background-color #fd926d
          color #ffffff
        span
          cursor pointer
          display block
          position relative
          top 50%
          margin-top: -0.5em

    .hot-leftrigth
      margin-left: auto
      height hot-menu-height
      padding 0px
      border-width 0px
      display flex
      section
        text-align: center
        background-color #f2f2f2
        width hot-menu-height
        height hot-menu-height
        margin 0px
        padding 0px
        border-width 0px
        &.active
          background-color #fd926d
          color #ffffff
        i.icon
          cursor pointer
          display block
          position relative
          top 50%
          margin-top: -0.5em
          font-size 45px


  .hot-positions
    height 455px
    background-color #fd926d
    display flex



