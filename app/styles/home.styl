large-screen = 1080px
middle-screen = 815px
small-screen = 640px
body-text-color = #555555
font-weight-normal = 400
font-weight-bold = 700

.full-flex-container
  display: flex
  align-items: center
  padding-left: 10%
  padding-right: 10%
  @media screen and (max-width: large-screen)
    padding-left: 5%
    padding-right: 5%
  @media screen and (max-width: small-screen)
    padding-left: 0px
    padding-right: 0px

color-back-activ = #fd926d
.hot-sales
  hot-menu-height = 45px
  .hot-menu
    height: hot-menu-height
    .hot-buttons
      height hot-menu-height
      margin 0px
      padding 0px
      border-width 0px
      display flex
      a
        display inline-block
        height 100%
        text-transform uppercase
        padding-left 15px
        padding-right 15px
        &.active
          background-color color-back-activ
          color #ffffff
        &:link
        &:visited
          text-decoration none
          color: body-text-color
        &:hover
          text-decoration underline
        span
          display block
          position relative
          top 50%
          margin-top: -0.5em

    .hot-leftrigth
      margin-left: auto
      height hot-menu-height
      padding 0px
      border-width 0px
      display flex
      a
        display block
        text-align: center
        background-color #f2f2f2
        width hot-menu-height
        height hot-menu-height
        margin 0px
        padding 0px
        border-width 0px
        &.active
          background-color #fd926d
          color #ffffff
        i.icon
          cursor pointer
          display block
          position relative
          top 50%
          margin-top: -0.5em
          font-size 45px

  .hot-positions
    height 455px
    background-color #fd926d
    overflow hidden

.fav-brands-box
  border-top: solid 1px #d8d8d8
  border-bottom: solid 1px #d8d8d8
  padding-bottom 30px
  min-height: 100px
  .fav-brand-header
    display block
    margin-left auto
    margin-right auto
    margin-top 0px
    margin-bottom 0px
    width 200px
    padding-left 10px
    padding-right 10px
    background-color #ffffff
    text-transform uppercase
    color: #414141
    font-size: 1.071em
    font-weight: font-weight-bold
    letter-spacing: -0.01em
    text-align: center
    transform: translateY(-0.6em)
  .brand-logos
    text-align center
    img
      margin-left 20px
      margin-right 20px


.about-box
  min-height: 160px
  text-align: center;
  padding-left: 5%
  padding-right: 5%
  h2
    color: #414141
    font-size: 1.714em
    font-weight: font-weight-normal
    letter-spacing: -0.01em
