large-screen = 1080px
middle-screen = 815px
small-screen = 640px
body-text-color = #555555
font-weight-normal = 400
font-weight-bold = 700

.full-flex-container
  display: flex
  align-items: center
  padding-left: 10%
  padding-right: 10%
  @media screen and (max-width: large-screen)
    padding-left: 5%
    padding-right: 5%
  @media screen and (max-width: small-screen)
    padding-left: 0px
    padding-right: 0px

.fav-brands-box
  border-top: solid 1px #d8d8d8
  border-bottom: solid 1px #d8d8d8
  padding-bottom 30px
  min-height: 100px
  .fav-brand-header
    display block
    margin-left auto
    margin-right auto
    margin-top 0px
    margin-bottom 0px
    width 200px
    padding-left 10px
    padding-right 10px
    background-color #ffffff
    text-transform uppercase
    color: #414141
    font-size: 1.071em
    font-weight: font-weight-bold
    letter-spacing: -0.01em
    text-align: center
    transform: translateY(-0.6em)
  .brand-logos
    text-align center
    img
      margin-left 20px
      margin-right 20px


.about-box
  min-height: 160px
  text-align: center;
  padding-left: 5%
  padding-right: 5%
  h2
    color: #414141
    font-size: 1.714em
    font-weight: font-weight-normal
    letter-spacing: -0.01em
