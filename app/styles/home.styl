large-screen = 1080px
middle-screen = 925px
small-screen = 640px
body-text-color = #555555
font-weight-normal = 400
font-weight-bold = 700

.full-flex-container
  display: flex
  align-items: center
  padding-left: 10%
  padding-right: 10%
  @media screen and (max-width: large-screen)
    padding-left: 5%
    padding-right: 5%

user-connections-height = 55px
user-connections-back = #ededed
user-connections-back_alt = #f7f7f7
user-connections-text = #6b6b6b
user-connections-inp = #9f9f9f
.user-connections
  background-color: user-connections-back
  height: user-connections-height
  color: user-connections-text
  h2
    font-size: 0.857em
    font-weight: font-weight-normal
    letter-spacing: -0.005em
    margin-right 15px

  .email-subscription
    display flex
    align-items: center
    input
      border 0px
      height: 28px
      color: user-connections-inp
      font-size: 0.857em
      font-style: italic
      letter-spacing: -0.005em
      text-align: left
      padding-left 10px

    input:focus
        color: user-connections-text
        font-style: normal
    img.email-do
        position relative
        right 2px
        height 26px
        width auto

  .social-buttons
    height user-connections-height
    margin 0px
    padding 0px
    border-width 0px
    display flex
    margin-left: auto
    align-items: center
    a
      display block
      text-align: center
      height user-connections-height
      width user-connections-height
      margin 0px
      padding 0px
      border-width 0px
      transition: transform 0.5s
      &:link
      &:visited
        text-decoration none
        color: user-connections-text
      &:hover
        transform: scale(1.1, 1.1);
        transition: transform 0s
      i.icon
        display block
        position relative
        top 50%
        margin-top: -0.5em
        font-size 27px
      &:nth-child(even)
        background-color user-connections-back_alt
      &:nth-child(odd)
        background-color user-connections-back

color-back-activ = #fd926d
.hot-sales
  hot-menu-height = 45px
  .hot-menu
    height: hot-menu-height
    .hot-buttons
      height hot-menu-height
      margin 0px
      padding 0px
      border-width 0px
      display flex
      a
        display inline-block
        height 100%
        text-transform uppercase
        padding-left 15px
        padding-right 15px
        &.active
          background-color color-back-activ
          color #ffffff
        &:link
        &:visited
          text-decoration none
          color: body-text-color
        &:hover
          text-decoration underline
        span
          display block
          position relative
          top 50%
          margin-top: -0.5em

    .hot-leftrigth
      margin-left: auto
      height hot-menu-height
      padding 0px
      border-width 0px
      display flex
      a
        display block
        text-align: center
        background-color #f2f2f2
        width hot-menu-height
        height hot-menu-height
        margin 0px
        padding 0px
        border-width 0px
        &.active
          background-color #fd926d
          color #ffffff
        i.icon
          cursor pointer
          display block
          position relative
          top 50%
          margin-top: -0.5em
          font-size 45px

  .hot-positions
    height 455px
    background-color #fd926d
    overflow hidden

.fav-brands-box
  border-top: solid 1px #d8d8d8
  border-bottom: solid 1px #d8d8d8
  padding-bottom 30px
  min-height: 100px
  .fav-brand-header
    display block
    margin-left auto
    margin-right auto
    margin-top 0px
    margin-bottom 0px
    width 200px
    padding-left 10px
    padding-right 10px
    background-color #ffffff
    text-transform uppercase
    color: #414141
    font-size: 1.071em
    font-weight: font-weight-bold
    letter-spacing: -0.01em
    text-align: center
    transform: translateY(-0.6em)
  .brand-logos
    text-align center
    img
      margin-left 20px
      margin-right 20px


.about-box
  min-height: 160px
  text-align: center;
  padding-left: 5%
  padding-right: 5%
  h2
    color: #414141
    font-size: 1.714em
    font-weight: font-weight-normal
    letter-spacing: -0.01em
